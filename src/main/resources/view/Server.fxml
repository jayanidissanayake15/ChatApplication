<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.ServerController"
            prefWidth="400" prefHeight="500">

    <children>
        <Label text="Server Chat" layoutX="20" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextArea fx:id="txtAreaChat" layoutX="20" layoutY="50" prefWidth="360" prefHeight="350"
                  editable="false" wrapText="true"/>

        <TextField fx:id="txtMessage" layoutX="20" layoutY="420" prefWidth="270" promptText="Type message..."/>

        <Button text="Send" layoutX="300" layoutY="420" prefWidth="80" onAction="#onSendAction"/>
    </children>
</AnchorPane>
